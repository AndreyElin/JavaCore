<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="calculator.Controller">
   <children>
      <Label fx:id="label" alignment="CENTER_RIGHT" prefHeight="70.0" prefWidth="300.0" text="" >
         <font>
            <Font size="24.0" />
         </font></Label>
      <GridPane gridLinesVisible="true" prefHeight="330.0" prefWidth="300.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <children>
            <Button onAction="#clickBtnDigit" prefHeight="80.0" prefWidth="75.0" text="1">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button onAction="#clickBtnDigit" prefHeight="80.0" prefWidth="75.0" text="2" GridPane.columnIndex="1">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button onAction="#clickBtnDigit" prefHeight="80.0" prefWidth="75.0" text="3" GridPane.columnIndex="2">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button prefHeight="80.0" prefWidth="75.0" text="+" GridPane.columnIndex="3" onAction="#clickBtnOperator">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button onAction="#clickBtnDigit" prefHeight="80.0" prefWidth="75.0" text="4" GridPane.rowIndex="1">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button onAction="#clickBtnDigit" prefHeight="80.0" prefWidth="75.0" text="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button onAction="#clickBtnDigit" prefHeight="80.0" prefWidth="75.0" text="6" GridPane.columnIndex="2" GridPane.rowIndex="1">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button prefHeight="80.0" prefWidth="75.0" text="-" GridPane.columnIndex="3" GridPane.rowIndex="1" onAction="#clickBtnOperator">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button onAction="#clickBtnDigit" prefHeight="80.0" prefWidth="75.0" text="7" GridPane.rowIndex="2">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button onAction="#clickBtnDigit" prefHeight="80.0" prefWidth="75.0" text="8" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button onAction="#clickBtnDigit" prefHeight="80.0" prefWidth="75.0" text="9" GridPane.columnIndex="2" GridPane.rowIndex="2">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button prefHeight="80.0" prefWidth="75.0" text="*" GridPane.columnIndex="3" GridPane.rowIndex="2" onAction="#clickBtnOperator">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button onAction="#clickBtnDigit" prefHeight="80.0" prefWidth="75.0" text="0" GridPane.rowIndex="3">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button prefHeight="80.0" prefWidth="75.0" text="" GridPane.columnIndex="1" GridPane.rowIndex="3" >
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button prefHeight="80.0" prefWidth="75.0" text="=" GridPane.columnIndex="2" GridPane.rowIndex="3" onAction="#clickBtnOperator">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button prefHeight="80.0" prefWidth="75.0" text="/" GridPane.columnIndex="3" GridPane.rowIndex="3" onAction="#clickBtnOperator">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
         </children>
      </GridPane>
   </children>
</VBox>
